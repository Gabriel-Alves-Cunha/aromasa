{
	"compilerOptions": {
		"forceConsistentCasingInFileNames": true,
		"lib": ["dom", "dom.iterable", "esnext"],
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"module": "esnext",
		"jsx": "preserve",
		"allowJs": true,
		"target": "es6",
		"strict": true,
		"noEmit": true,
		"baseUrl": "src"
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src"],
	"exclude": ["node_modules"]
}
